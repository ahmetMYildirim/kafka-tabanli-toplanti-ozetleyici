                    </VBox.margin>
                </Separator>

                <TabPane VBox.vgrow="ALWAYS">
                    <Tab text="ðŸ“„ Summary" closable="false">
                        <ScrollPane fitToWidth="true">
                            <VBox fx:id="summaryContent" spacing="10">
                                <padding>
                                    <Insets top="10" right="10" bottom="10" left="10"/>
                                </padding>
                            </VBox>
                        </ScrollPane>
                    </Tab>

                    <Tab text="ðŸŽ™ï¸ Transcription" closable="false">
                        <ScrollPane fitToWidth="true">
                            <TextArea fx:id="transcriptionText"
                                      editable="false"
                                      wrapText="true"
                                      prefRowCount="15"
                                      styleClass="transcription-text"/>
                        </ScrollPane>
                    </Tab>

                    <Tab text="âœ… Tasks" closable="false">
                        <ScrollPane fitToWidth="true">
                            <VBox fx:id="actionItemsList" spacing="10">
                                <padding>
                                    <Insets top="10" right="10" bottom="10" left="10"/>
                                </padding>
                            </VBox>
                        </ScrollPane>
                    </Tab>
                </TabPane>
            </VBox>
        </VBox>
    </center>
</BorderPane>

