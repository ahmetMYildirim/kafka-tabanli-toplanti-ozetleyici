                    <Button fx:id="exportButton" text="ðŸ“¥ Export" onAction="#exportToPdf" styleClass="export-button"/>
                </HBox>

                <Separator>
                    <VBox.margin>
                        <Insets top="10" bottom="10"/>
                    </VBox.margin>
                </Separator>

                <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" styleClass="meeting-scroll">
                    <FlowPane fx:id="meetingCards" hgap="15" vgap="15" alignment="TOP_LEFT" styleClass="meeting-cards-flow">
                        <padding>
                            <Insets top="5" right="5" bottom="5" left="5"/>
                        </padding>
                    </FlowPane>
                </ScrollPane>
            </VBox>

            <!-- Alt: SeÃ§ili ToplantÄ± DetayÄ± -->
            <VBox fx:id="detailPanel" styleClass="detail-panel" VBox.vgrow="ALWAYS" managed="false" visible="false">
                <padding>
                    <Insets top="15" right="15" bottom="15" left="15"/>
                </padding>

                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="ðŸ“– Meeting Detail" styleClass="panel-title"/>
                    <Region HBox.hgrow="ALWAYS"/>
