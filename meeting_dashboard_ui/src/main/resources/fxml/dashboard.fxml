            <Region HBox.hgrow="ALWAYS"/>

            <TextField fx:id="searchField" promptText="ðŸ” Search..." styleClass="search-box" prefWidth="200"/>

            <Label fx:id="statsLabel" text="ðŸ“Š Loading..." styleClass="stats-label"/>
            <Label fx:id="connectionStatus" text="âšª Connecting..." styleClass="connection-status"/>

            <Separator orientation="VERTICAL"/>

            <ComboBox fx:id="languageCombo" prefWidth="90"/>
            <Button fx:id="themeToggleButton" text="ðŸŒ™" onAction="#toggleTheme" styleClass="theme-button"/>

            <Separator orientation="VERTICAL"/>

            <HBox styleClass="user-info-panel" spacing="8" alignment="CENTER">
                <Label text="ðŸ‘¤"/>
                <VBox spacing="2">
                    <Label fx:id="userNameLabel" text="User" styleClass="user-name"/>
                    <Label fx:id="userRoleLabel" text="Role" styleClass="role-badge"/>
                </VBox>
            </HBox>

            <Button fx:id="logoutButton" text="ðŸšª" onAction="#handleLogout" styleClass="logout-button"/>
        </HBox>
    </top>

    <!-- SOL PANEL - GÃ¶revler -->
    <left>
        <VBox styleClass="task-panel" prefWidth="280">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>

            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label fx:id="tasksPanelTitle" text="ðŸ“‹ My Tasks" styleClass="panel-title"/>
            </HBox>

            <Separator>
                <VBox.margin>
                    <Insets top="10" bottom="10"/>
                </VBox.margin>
            </Separator>

            <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" styleClass="task-scroll">
                <VBox fx:id="taskList" spacing="10">
                    <padding>
                        <Insets top="5" right="5" bottom="5" left="5"/>
                    </padding>
                </VBox>
            </ScrollPane>
        </VBox>
    </left>

    <!-- MERKEZ - ToplantÄ± Listesi ve Detay -->
    <center>
        <VBox spacing="15">
            <padding>
                <Insets top="15" right="20" bottom="15" left="20"/>
            </padding>

            <!-- Ãœst: ToplantÄ± Ã–zet Listesi -->
            <VBox styleClass="meeting-list-panel" VBox.vgrow="ALWAYS">
                <padding>
                    <Insets top="15" right="15" bottom="15" left="15"/>
                </padding>

                <HBox alignment="CENTER_LEFT" spacing="15">
                    <Label fx:id="meetingsPanelTitle" text="ðŸ“ Meeting Summaries" styleClass="panel-title"/>
                    <Region HBox.hgrow="ALWAYS"/>

                    <Label text="Platform:"/>
                    <ComboBox fx:id="platformFilter" prefWidth="120"/>

                    <Button text="ðŸ“¤ Upload" onAction="#uploadAudioFile" styleClass="upload-button" 
